<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Player.Caching] | Player.Forwarding | Player.Rewinding</visible>
	<visible>!Window.IsActive(videoosd) + Window.IsActive(fullscreenvideo)</visible>
	<animation effect="fade" start="0" end="100" time="150">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
	<depth>DepthOSD</depth>
	<controls>
		<control type="image">
			<left>0</left>
			<top>-30</top>
			<width>110%</width>
			<height>210</height>
			<texture flipy="true">frame/InfoBar.png</texture>
		</control>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>110%</width>
			<height>180</height>
			<texture flipy="true">frame/InfoBar.png</texture>
		</control>
		<control type="group">
			<top>890</top>
			<control type="label">
				<top>5</top>
				<right>51</right>
				<width>400</width>
				<height>20</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font25</font>
				<label>[COLOR color_main]$LOCALIZE[21396]:  [/COLOR]$INFO[player.chapter]$INFO[player.chaptercount, / ]</label>
				<visible>player.chaptercount + Window.IsVisible(FullScreenVideo)</visible>
			</control>
			<control type="label">
				<left>40</left>
				<top>7</top>
				<width>240</width>
				<height>20</height>
				<aligny>center</aligny>
				<font>font25</font>
				<textcolor>color_main</textcolor>
				<label>$VAR[SeekLabel]</label>
			</control>
			<control type="label">
				<left>850</left>
				<top>7</top>
				<width>240</width>
				<height>20</height>
				<aligny>center</aligny>
				<align>center</align>
				<font>font25</font>
				<textcolor>color_main</textcolor>
				<label>$LOCALIZE[31080]</label>
			</control>
			<control type="label">
				<left>850</left>
				<top>40</top>
				<width>240</width>
				<height>20</height>
				<aligny>center</aligny>
				<align>center</align>
				<font>font30</font>
				<label>$INFO[Player.FinishTime]</label>
			</control>
			<control type="label">
				<top>40</top>
				<right>51</right>
				<width>400</width>
				<height>20</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font30</font>
				<label>[COLOR color_main]$LOCALIZE[31134]:  [/COLOR]$INFO[Player.TimeRemaining]</label>
			</control>
			<control type="label">
				<left>40</left>
				<top>40</top>
				<width>350</width>
				<height>20</height>
				<font>font30</font>
				<aligny>center</aligny>
				<label>$VAR[SeekTimeLabelVar]</label>
			</control>
			<control type="progress">
				<animation effect="fade" end="0" time="200">WindowClose</animation>
				<left>0</left>
				<top>80</top>
				<width>1920</width>
				<height>15</height>
				<info>Player.ProgressCache</info>
				<texturebg border="3" colordiffuse="60FFFFFF">colors/white50.png</texturebg>
				<midtexture colordiffuse="color_main">colors/white50.png</midtexture>
			</control>
			<control type="progress">
				<animation effect="fade" end="0" time="200">WindowClose</animation>
				<left>0</left>
				<top>80</top>
				<width>1920</width>
				<height>15</height>
				<info>Player.Progress</info>
				<texturebg border="3" colordiffuse="60FFFFFF">colors/white50.png</texturebg>
				<midtexture colordiffuse="color_main">colors/white50.png</midtexture>
			</control>
			<control type="slider" id="401">
				<left>0</left>
				<top>75</top>
				<width>1920</width>
				<height>25</height>
				<texturesliderbar colordiffuse="00FFFFFF">osd/progress/nub_bar.png</texturesliderbar>
				<textureslidernib colordiffuse="color_main">osd/progress/nub_bar.png</textureslidernib>
				<textureslidernibfocus colordiffuse="color_main">colors/white.png</textureslidernibfocus>
			</control>
		</control>
	</controls>
</window>
