<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="SubmenuContent">
		<content target="$PARAM[widget_target]" limit="$PARAM[item_limit]">$PARAM[content_path]</content>
	</include>
	<include name="PVRSubMenuContent">
		<content>
			<item>
				<label>$LOCALIZE[19019]</label>
				<onclick>ActivateWindow($PARAM[pvr_type]Channels)</onclick>
				<thumb>DefaultAddonPeripheral.png</thumb>
			</item>
			<item>
				<label>$LOCALIZE[19069]</label>
				<onclick>ActivateWindow($PARAM[pvr_type]Guide)</onclick>
				<thumb>icons/pvr/epg.png</thumb>
			</item>
			<item>
				<label>$LOCALIZE[19017]</label>
				<onclick>ActivateWindow($PARAM[pvr_type]Recordings)</onclick>
				<thumb>icons/pvr/recording.png</thumb>
			</item>
			<item>
				<label>$LOCALIZE[19040]</label>
				<onclick>ActivateWindow($PARAM[pvr_type]Timers)</onclick>
				<thumb>icons/pvr/timer.png</thumb>
			</item>
			<item>
				<label>$LOCALIZE[19138]</label>
				<onclick>ActivateWindow($PARAM[pvr_type]TimerRules)</onclick>
				<thumb>icons/pvr/timer-rule.png</thumb>
			</item>
			<item>
				<label>$LOCALIZE[137]</label>
				<onclick>ActivateWindow($PARAM[pvr_type]Search)</onclick>
				<thumb>DefaultAddonsSearch.png</thumb>
			</item>
		</content>
	</include>
	<include name="SubMenuList">
		<top>85</top>
		<left>-500</left>
		<bottom>100</bottom>
		<width>500</width>
		<movement>2</movement>
		<focusposition>2</focusposition>
		<ondown>$PARAM[list_id]</ondown>
		<onup>$PARAM[list_id]</onup>
		<visible>$PARAM[visible]</visible>
		<onleft>9000</onleft>
		<onright>9000</onright>
		<orientation>vertical</orientation>
		<scrolltime tween="cubic" easing="out">500</scrolltime>
		<itemlayout height="150">
			<control type="group">
				<control type="label">
					<left>50</left>
					<right>40</right>
					<height>150</height>
					<font>font45</font>
					<label>$INFO[ListItem.Label]</label>
					<align>left</align>
					<aligny>center</aligny>
				</control>
			</control>
		</itemlayout>
		<focusedlayout height="150">
			<control type="group">
				<left>0</left>
				<right>0</right>
				<control type="image">
					<left>0</left>
					<right>25</right>
					<height>100%</height>
					<visible>Control.HasFocus($PARAM[list_id])</visible>
					<texture colordiffuse="primary_color" border="50">buttons/dialogbutton-fo.png</texture>
				</control>
				<control type="label">
					<left>50</left>
					<right>40</right>
					<height>150</height>
					<font>font45</font>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<align>left</align>
				</control>
			</control>
		</focusedlayout>
	</include>
</includes>
