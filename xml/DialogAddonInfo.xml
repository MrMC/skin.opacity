				<textcolor>88FFFFFF</textcolor>
				<autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
			</control>
			<control type="image">
				<description>separator image</description>
				<top>105</top>
				<height>4</height>
				<texture colordiffuse="primary_color" border="3">dialogs/separator-grey.png</texture>
			</control>
			<control type="image">
				<description>separator image</description>
				<bottom>105</bottom>
				<height>4</height>
				<texture colordiffuse="primary_color" border="3">dialogs/separator-grey.png</texture>
			</control>
			<include content="InfoDialogTopBarInfo">
				<param name="main_label" value="$INFO[ListItem.Property(Addon.Name)]" />
				<param name="sub_label" value="$INFO[ListItem.Property(Addon.Version),[COLOR grey],[/COLOR]]$INFO[ListItem.Property(Addon.Creator), $LOCALIZE[31071] ]" />
