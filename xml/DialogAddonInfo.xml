<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload condition="!ListItem.Property(Addon.Installed) + Window.IsActive(addonbrowser)">SetFocus(6)</onload>
